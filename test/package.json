{
  "name": "cr-006-asset-snapshot-system-tests",
  "version": "1.0.0",
  "description": "Integration tests for CR-006 Asset Snapshot System",
  "scripts": {
    "test": "jest --config jest-docker.json",
    "test:integration": "jest --config jest-docker.json --testPathPattern=integration",
    "test:performance": "jest --config jest-docker.json --testPathPattern=performance",
    "test:error-handling": "jest --config jest-docker.json --testPathPattern=error-handling",
    "test:snapshot": "jest --config jest-docker.json --testPathPattern=snapshot",
    "test:run": "ts-node run-tests.ts",
    "test:health": "ts-node test-health-check.ts",
    "test:monitor": "ts-node test-monitor.ts",
    "test:summary": "ts-node test-summary.ts",
    "test:setup": "ts-node test-db-setup.ts",
    "test:clean": "ts-node test-db-setup.ts --cleanup",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "test:docker:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:docker:down": "docker-compose -f docker-compose.test.yml down -v",
    "test:docker:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "test:docker:shell": "docker-compose -f docker-compose.test.yml exec test-runner sh"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
