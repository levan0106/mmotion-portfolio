# Development Dockerfile for Frontend (Vite)
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (including devDependencies for development)
RUN npm ci --include=dev

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start Vite development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3001"]
