# Frontend Production Environment Configuration
# Portfolio Management System - AWS Production Frontend

# API Configuration
VITE_API_URL=https://api.mmotion.cloud
VITE_WS_URL=wss://api.mmotion.cloud

# Environment
VITE_ENV=production

# Feature Flags
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_ADVANCED_CHARTS=true
VITE_ENABLE_COMPACT_MODE=true

# External Services
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_HOTJAR_ID=HOTJAR_SITE_ID

# CDN Configuration
VITE_CDN_URL=https://d1234567890.cloudfront.net
VITE_STATIC_ASSETS_URL=https://d1234567890.cloudfront.net/assets

# Performance Configuration
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STRATEGY=stale-while-revalidate

# Security Configuration
VITE_CSP_ENABLED=true
VITE_CSP_REPORT_URI=https://api.mmotion.cloud/csp-report

# Monitoring Configuration
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_USER_ANALYTICS=true

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_COMPACT_MODE=true

# Localization
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,vi
VITE_ENABLE_I18N=true

# Development Tools (disabled in production)
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_MOCK_DATA=false

# Build Configuration
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_COMPRESS=true

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# WebSocket Configuration
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000
VITE_WS_HEARTBEAT_INTERVAL=30000

# Chart Configuration
VITE_CHART_ANIMATION_ENABLED=true
VITE_CHART_RESPONSIVE=true
VITE_CHART_THEME=light

# Notification Configuration
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_BROWSER_NOTIFICATIONS=true
VITE_NOTIFICATION_PERMISSION_REQUIRED=true

# Storage Configuration
VITE_LOCAL_STORAGE_PREFIX=portfolio_
VITE_SESSION_STORAGE_ENABLED=true
VITE_CACHE_STORAGE_ENABLED=true

# Network Configuration
VITE_REQUEST_TIMEOUT=30000
VITE_UPLOAD_TIMEOUT=60000
VITE_DOWNLOAD_TIMEOUT=30000

# UI Configuration
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100
VITE_ENABLE_INFINITE_SCROLL=true
VITE_ENABLE_VIRTUAL_SCROLLING=true

# Accessibility
VITE_ENABLE_KEYBOARD_NAVIGATION=true
VITE_ENABLE_SCREEN_READER_SUPPORT=true
VITE_ENABLE_HIGH_CONTRAST_MODE=true

# Performance Monitoring
VITE_ENABLE_WEB_VITALS=true
VITE_ENABLE_LCP_MONITORING=true
VITE_ENABLE_FID_MONITORING=true
VITE_ENABLE_CLS_MONITORING=true

# Error Handling
VITE_ERROR_BOUNDARY_ENABLED=true
VITE_ERROR_REPORTING_ENABLED=true
VITE_ERROR_RECOVERY_ENABLED=true

# Testing (disabled in production)
VITE_ENABLE_TESTING=false
VITE_ENABLE_E2E_TESTING=false
VITE_ENABLE_UNIT_TESTING=false

# Development vs Production
VITE_DEBUG=false
VITE_VERBOSE_LOGGING=false
VITE_PROFILING_ENABLED=false
