# Staging Environment Configuration

# Database Configuration
DB_HOST=postgres-staging
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=portfolio_db_staging

# Redis Configuration
REDIS_URL=redis://redis-staging:6379
REDIS_HOST=redis-staging
REDIS_PORT=6379

# Application Configuration
PORT=3000
NODE_ENV=staging

# CORS Configuration
CORS_ORIGINS=http://staging.example.com,https://staging.example.com

# JWT Configuration
JWT_SECRET=your-staging-secret-key-here
JWT_EXPIRES_IN=24h

# Risk Metrics Configuration
RISK_FREE_RATE=0.05
TRADING_DAYS_PER_YEAR=252
MIN_RISK_DATA_POINTS=2

# External API Configuration
CAFEF_API_URL=https://s.cafef.vn
VNDIRECT_API_URL=https://api.vndirect.com.vn
VIETCOMBANK_API_URL=https://api.vietcombank.com.vn

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX_ITEMS=1000
CACHE_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_CONSOLE_ENABLED=true
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/application.log
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5
LOG_DATABASE_ENABLED=true
LOG_RETENTION_DAYS=14
LOG_CLEANUP_ENABLED=true
LOG_CLEANUP_SCHEDULE=0 2 * * *
LOG_PERFORMANCE_ENABLED=true
LOG_PERFORMANCE_THRESHOLD=1000
LOG_SECURITY_ENABLED=true
LOG_REQUEST_ENABLED=true
LOG_BUSINESS_EVENTS_ENABLED=true

# Price Update Configuration
# Fixed time schedule: run twice daily at 9:01 AM, 3:01 PM and 6:50 PM (Vietnam time) 
# TYPE = interval or fixed_times

PRICE_UPDATE_SCHEDULE_TYPE=fixed_times
AUTO_SYNC_ENABLED=true
# Option 1: Interval-based (original)
PRICE_UPDATE_INTERVAL_MINUTES=240
# Option 2: Fixed times (new)
PRICE_UPDATE_FIXED_TIMES=09:02,15:02,18:50
PRICE_UPDATE_TIMEZONE=Asia/Ho_Chi_Minh

# Automated Snapshot Configuration - Staging
# Business hours only for staging testing
AUTOMATED_SNAPSHOT_CRON=0 9,12,15,18 * * 1-5
AUTOMATED_SNAPSHOT_TIMEZONE=Asia/Ho_Chi_Minh
AUTOMATED_SNAPSHOT_DESCRIPTION=Business hours only (9 AM, 12 PM, 3 PM, 6 PM)
AUTOMATED_SNAPSHOT_ENABLED=true
AUTOMATED_SNAPSHOT_TIMEOUT_MINUTES=45
AUTOMATED_SNAPSHOT_BATCH_SIZE=3
AUTOMATED_SNAPSHOT_MAX_RETRIES=3
AUTOMATED_SNAPSHOT_RETRY_DELAY_SECONDS=5
