# Development Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=portfolio_db_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Application Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# JWT Configuration
JWT_SECRET=your-dev-secret-key-here
JWT_EXPIRES_IN=7d

# Risk Metrics Configuration
RISK_FREE_RATE=0.05
TRADING_DAYS_PER_YEAR=252
MIN_RISK_DATA_POINTS=2

# External API Configuration
CAFEF_API_URL=https://s.cafef.vn
VNDIRECT_API_URL=https://api.vndirect.com.vn
VIETCOMBANK_API_URL=https://api.vietcombank.com.vn

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX_ITEMS=1000
CACHE_ENABLED=false

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_CONSOLE_ENABLED=true
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/application.log
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5
LOG_DATABASE_ENABLED=true
LOG_RETENTION_DAYS=7
LOG_CLEANUP_ENABLED=true
LOG_CLEANUP_SCHEDULE=0 2 * * *
LOG_PERFORMANCE_ENABLED=true
LOG_PERFORMANCE_THRESHOLD=1000
LOG_SECURITY_ENABLED=true
LOG_REQUEST_ENABLED=true
LOG_BUSINESS_EVENTS_ENABLED=true

# Price Update Configuration
# Fixed time schedule: run twice daily at 9:01 AM, 3:01 PM and 6:50 PM (Vietnam time) 
# TYPE = interval or fixed_times

PRICE_UPDATE_SCHEDULE_TYPE=fixed_times
AUTO_SYNC_ENABLED=false
# Option 1: Interval-based (original)
PRICE_UPDATE_INTERVAL_MINUTES=120
# Option 2: Fixed times (new)
PRICE_UPDATE_FIXED_TIMES=09:03,12:03,15:03,19:03
PRICE_UPDATE_TIMEZONE=Asia/Ho_Chi_Minh

# Automated Snapshot Configuration - Development
# More frequent execution for testing
AUTOMATED_SNAPSHOT_CRON=10 19 * * *
AUTOMATED_SNAPSHOT_TIMEZONE=Asia/Ho_Chi_Minh
AUTOMATED_SNAPSHOT_DESCRIPTION=Daily at 7:00 PM (Vietnam time)
AUTOMATED_SNAPSHOT_ENABLED=true
AUTOMATED_SNAPSHOT_TIMEOUT_MINUTES=60
AUTOMATED_SNAPSHOT_BATCH_SIZE=5
AUTOMATED_SNAPSHOT_MAX_RETRIES=3
AUTOMATED_SNAPSHOT_RETRY_DELAY_SECONDS=5
